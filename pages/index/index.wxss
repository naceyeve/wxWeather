
.temp{
  font-size: 200rpx;
  line-height: 280rpx;
  text-align: center;
  opacity: 0.8;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity:0.6
}
.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}

/*height 154rpx
154=42+10+42+60*/
.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-tips{
  margin-top:10rpx;
  text-align: center;
  line-height: 42rpx;
}

.weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
  
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast{
  display: flex;

}

.forecast-item{
  display: flex;
  width:120rpx;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.forecast-time{
  font-size: 36rpx;
  line-height: 42rpx;
}

.forecast-icon{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp{
  font-size: 40rpx;
  line-height: 56rpx;
  margin-top: 46rpx;
}

.day-weather{
  display: flex;
  align-items: center;
  position:absolute;
  bottom: 0;
  right: 40rpx;
  left: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.day-temp{
  flex-grow: 1;
  text-align: right;
  padding-right: 30rpx
}

.day-arrow{
  width: 13rpx;
  height: 24rpx;
}
